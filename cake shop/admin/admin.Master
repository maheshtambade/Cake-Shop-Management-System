     </a>
         <h5 style="margin-left:17px;">&nbspWelcome,<asp:Label ID="lblUsername" runat="server" Text=""></asp:Label>!</h5>
        <a href="../admin/logout.aspx"><button type="submit" class="btn btn-danger mt-3">Logout</button>
        <%--<form id="form2" runat="server"> <asp:Button ID="btnLogout" runat="server" Text="Logout" OnClick="btnLogout_Click" CssClass="btn btn-danger" /></form>--%>
        </a>
    </div>

