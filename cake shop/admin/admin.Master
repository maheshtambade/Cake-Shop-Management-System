    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 250px;
            height:100vh;
            background-color: #000;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: flex-start; /* Align items at the top */
            padding-top: 20px; /* Add padding to push items slightly down */
        }

        .sidebar a {
            color: #fff;
            text-decoration: none;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #333;
        }

        .sidebar a i {
            margin-right: 10px;
        }

        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .header {
            background-color: #f8f9fa;
            padding: 15px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            width:100%;
        }

        .main-content {
            flex: 1;
            padding: 20px;
        }
        i{
            font-size:25px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="../admin/dashboard.aspx">
            <i class="bi bi-house-door"></i> Dashboard
        </a>
         <a href="../admin/add.aspx">
